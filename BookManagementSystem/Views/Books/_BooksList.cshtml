@model IEnumerable<dotNetBasic.DTO.BooksDTO>

@foreach (var book in Model)
{
    <div class="card mb-2 shadow-sm" data-book-id="@book.Id">
        <div class="card-body">
            <h6 class="card-title">@book.Title</h6>
            <p class="mb-1 text-muted">@book.Author</p>
            <small>@book.Genre</small>

            <div class="float-end">
                <!-- EDIT -->
                <button class="btn btn-sm btn-outline-primary edit-book"
                        data-id="@book.Id"
                        title="Edit">
                    ‚úè
                </button>

                <!-- DELETE -->
                <button class="btn btn-sm btn-outline-danger delete-book"
                        data-id="@book.Id"
                        title="Delete">
                    üóëÔ∏è
                </button>

                <!-- DETAILS -->
                <a asp-action="Details"
                   asp-route-id="@book.Id"
                   class="btn btn-sm btn-outline-dark"
                   title="View">
                    View
                </a>
            </div>
        </div>
    </div>
}
